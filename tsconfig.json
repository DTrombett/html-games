{
	"extends": "@tsconfig/recommended/tsconfig.json",
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"alwaysStrict": true,
		"importHelpers": true,
		"importsNotUsedAsValues": "remove",
		"newLine": "lf",
		"noEmitHelpers": true,
		"outDir": "dist",
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"useUnknownInCatchVariables": true,
		"lib": [
			"DOM",
			"ESNext",
		],
		"module": "ESNext",
		"target": "ESNext"
	},
	"include": [
		"src"
	]
}